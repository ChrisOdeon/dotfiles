syntax enable
set background=dark
colorscheme solarized

let g:Powerline_symbols = 'fancy'

if has("gui_macvim") && has("gui_running")
  call janus#add_mapping('ctrlp', 'map', '<D-t>', ':CtrlPMixed<CR>')
  call janus#add_mapping('ctrlp', 'imap', '<D-t>', '<ESC>:CtrlPMixed<CR>')
else
  call janus#add_mapping('ctrlp', 'map', '<C-t>', ':CtrlPMixed<CR>')
  call janus#add_mapping('ctrlp', 'imap', '<C-t>', '<ESC>:CtrlPMixed<CR>')
endif

